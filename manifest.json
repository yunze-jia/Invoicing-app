{
  "name": "native-invoicing-app",
  "vendor": "vtexasia",
  "version": "5.0.37",
  "title": "Native Invoicing Application",
  "description": "Sending the invoice email to both Buyer and Seller ",
  "mustUpdateAt": "2018-01-04",
  "categories": [],
  "dependencies": {
    "vtex.styleguide": "9.x",
    "vtex.broadcaster-worker": "0.x"
  },
  "builders": {
    "store": "0.x",
    "react": "3.x",
    "node": "6.x",
    "docs": "0.x"
  },
  "billingOptions": {
    "termsURL": "https://compliance.vtex.com/gdpr/policies/vtex-privacy-policy",
    "support": {
      "url": "https://support.vtex.com/hc/requests"
    },
    "free": true,
    "type": "free",
    "availableCountries": [
      "*"
    ]
  },
  "scripts": {
    "prereleasy": "bash lint.sh"
  },
  "credentialType": "absolute",
  "settingsSchema": {
    "title": "native-invoicing",
    "type": "object",
    "properties": {
      "app_key": {
        "title": "Application key",
        "description": "used to access the vtex api",
        "type": "string"
      },
      "app_token": {
        "title": "application token",
        "description": "used to access the vtex apis",
        "type": "string"
      },
      "marketplace_email": {
        "title": "admin email in marketplace",
        "description": "used to send the invoice to the buyer and seller",
        "type": "string"
      },
      "logoUrl": {
        "title": "invoice logo Url",
        "description": "Add the url of logo you want to display. ",
        "type": "string"
      },
      "username": {
        "title": "Username",
        "description": "Username for mongodb authentication. ",
        "type": "string"
      },
      "password": {
        "title": "Password",
        "description": "Password for mongodb authentication ",
        "type": "string"
      },
      "baseUrl": {
        "title": "Base Url",
        "description": "Domain name or host name!",
        "type": "string"
      }
    }
  },
  "policies": [
    {
      "name": "outbound-access",
      "attrs": {
        "host": "mailservice.vtex.com.br",
        "path": "/api/mail-service/pvt/sendmail"
      }
    },
    {
      "name": "outbound-access",
      "attrs": {
        "host": "api.vtex.com",
        "path": "/api/*"
      }
    },
    {
      "name": "outbound-access",
      "attrs": {
        "host": "app.io.vtex.com",
        "path": "/*"
      }
    },
    {
      "name": "outbound-access",
      "attrs": {
        "host": "httpstat.us",
        "path": "*"
      }
    },
    {
      "name": "outbound-access",
      "attrs": {
        "host": "{{account}}.vtexcommercestable.com.br",
        "path": "/*"
      }
    },
    {
      "name": "outbound-access",
      "attrs": {
        "host": "conversationtracker.vtex.com.br",
        "path": "*"
      }
    },
    {
      "name": "outbound-access",
      "attrs": {
        "host": "{{account}}.myvtex.com.br",
        "path": "*"
      }
    },
    {
      "name": "outbound-access",
      "attrs": {
        "host": "ec2-13-211-128-127.ap-southeast-2.compute.amazonaws.com",
        "path": "/*"
      }
    },
    {
      "name": "outbound-access",
      "attrs": {
        "host": "portal.vtexcommercestable.com.br",
        "path": "/api/oms/*"
      }
    },
    {
      "name": "colossus-fire-event"
    },
    {
      "name": "colossus-write-logs"
    },
    {
      "name": "vbase-read-write"
    },
    {
      "name": "ADMIN_DS"
    },
    {
      "name": "OMSViewer"
    },
    {
      "name": "POWER_USER_DS"
    }
  ],
  "$schema": "https://raw.githubusercontent.com/vtex/node-vtex-api/master/gen/manifest.schema"
}
